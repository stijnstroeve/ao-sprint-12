@model Top2000.Models.RegisterModel
@{
    ViewBag.Title = "Registreren";
}

<div class="auth-modal container">
    <div class="auth-wrapper col-lg-5">

        @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
        {
            <h2>Registreren</h2>

            <div class="form-group">
                <label for="email">E-mail address *</label>
                @Html.TextBoxFor(x => x.Email, new { id = "email",  placeholder="E-mail invoeren", @class="form-control" })
            </div>

            <div class="form-group">
                <label for="firstname">Voornaam *</label>
                @Html.TextBoxFor(x => x.FirstName, new { id = "firstname", placeholder = "Voornaam", @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="lastname">Achternaam *</label>
                @Html.TextBoxFor(x => x.LastName, new { id = "lastname", placeholder = "Achternaam", @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="password">Wachtwoord *</label>
                @Html.TextBoxFor(x => x.Password, new { id = "password", placeholder = "Wachtwoord", @class = "form-control" })
                <small id="emailHelp" class="form-text text-muted">* = verplicht</small>
            </div>

            <button type="submit" class="btn btn-danger">Registreren</button>
        }

    </div>
</div>
